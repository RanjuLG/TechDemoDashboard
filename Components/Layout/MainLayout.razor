@inherits LayoutComponentBase

<div class="d-flex min-vh-100 bg-dark-custom">
    <!-- Sidebar -->
    <div class="sidebar bg-darker-custom border-end border-secondary d-flex flex-column" style="width: 280px; position: sticky; top: 0; height: 100vh; overflow-y: auto;">
        <NavMenu />
    </div>

    <!-- Main content -->
    <div class="flex-grow-1 bg-dark-custom">
        <main class="p-0">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" class="position-fixed bottom-0 start-0 w-100 p-3" style="z-index: 1050; display: none;">
    <div class="alert alert-danger d-flex justify-content-between align-items-center mb-0" role="alert">
        <span>An unhandled error has occurred. <a href="" class="alert-link">Reload</a></span>
        <button type="button" class="btn-close btn-close-white" aria-label="Close" onclick="document.getElementById('blazor-error-ui').style.display='none'"></button>
    </div>
</div>

<style>
    .sidebar {
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3);
    }
    
    .sidebar::-webkit-scrollbar {
        width: 6px;
    }
    
    .sidebar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 3px;
    }
    
    #blazor-error-ui {
        background: transparent;
    }
</style>
