                        <div class="border-start border-info border-3 ps-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h4 class="h6 fw-bold text-info mb-0">3Ô∏è‚É£ Scoped - One Per Request</h4>
                                <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="collapse" data-bs-target="#diCode3" aria-expanded="false" aria-controls="diCode3">
                                    View Code
                                </button>
                            </div>
                            <p class="small text-secondary-custom mb-2">
                                Same instance within a request, different across requests
                            </p>
                            <div class="collapse" id="diCode3">
                                <div class="bg-dark rounded p-3 mt-2">
                                    <pre class="mb-0"><code class="text-white-50 small">// Service definition
public class ScopedService
{
    public Guid InstanceId { get; }
    
    public ScopedService()
