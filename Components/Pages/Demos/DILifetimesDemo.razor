@page "/demos/di-lifetimes"
@using TechDemoDashboard.Services
@inject TransientService Transient1
@inject TransientService Transient2
@inject ScopedService Scoped1
@inject ScopedService Scoped2
@inject SingletonService Singleton1
@inject SingletonService Singleton2
@rendermode InteractiveServer

<PageTitle>DI Lifetimes Demo</PageTitle>

<div class="demo-page">
    <h1>üíâ DI Lifetimes Visualizer</h1>
    <p class="description">
        Understand the difference between Transient, Scoped, and Singleton service lifetimes.
        Each service generates a unique GUID when instantiated. Watch how they behave differently!
    </p>

    <div class="interview-question">
        <span class="label">üéØ Interview Question:</span>
        <span class="question">"What is the difference between Scoped and Transient services?"</span>
    </div>

    <div class="controls">
        <button class="btn btn-refresh" @onclick="RefreshPage">
            üîÑ Refresh Page
        </button>
        <span class="refresh-hint">Click to see how each lifetime behaves on refresh</span>
    </div>

    <div class="lifetime-grid">
        <!-- Transient -->
        <div class="lifetime-card transient">
            <div class="card-header">
                <span class="lifetime-icon">üîÑ</span>
                <h3>Transient</h3>
                <span class="lifetime-badge">New instance every time</span>
            </div>
            <div class="card-content">
                <p class="lifetime-desc">A new instance is created <strong>every time</strong> the service is requested.</p>
                <div class="instance-row">
                    <div class="instance">
                        <span class="instance-label">Injection 1:</span>
                        <code class="guid">@Transient1.InstanceId.ToString()[..8]...</code>
                    </div>
                    <div class="instance">
                        <span class="instance-label">Injection 2:</span>
                        <code class="guid">@Transient2.InstanceId.ToString()[..8]...</code>
                    </div>
                </div>
                <div class="comparison @(Transient1.InstanceId == Transient2.InstanceId ? "same" : "different")">
                    @if (Transient1.InstanceId == Transient2.InstanceId)
                    {
                        <span>‚úÖ Same instance</span>
                    }
                    else
                    {
                        <span>‚ùå Different instances</span>
                    }
                </div>
            </div>
        </div>

        <!-- Scoped -->
        <div class="lifetime-card scoped">
            <div class="card-header">
                <span class="lifetime-icon">üì¶</span>
                <h3>Scoped</h3>
                <span class="lifetime-badge">One per request</span>
            </div>
            <div class="card-content">
                <p class="lifetime-desc">One instance per <strong>HTTP request/scope</strong>. Same within request, different across requests.</p>
                <div class="instance-row">
                    <div class="instance">
                        <span class="instance-label">Injection 1:</span>
                        <code class="guid">@Scoped1.InstanceId.ToString()[..8]...</code>
                    </div>
                    <div class="instance">
                        <span class="instance-label">Injection 2:</span>
                        <code class="guid">@Scoped2.InstanceId.ToString()[..8]...</code>
                    </div>
                </div>
                <div class="comparison @(Scoped1.InstanceId == Scoped2.InstanceId ? "same" : "different")">
                    @if (Scoped1.InstanceId == Scoped2.InstanceId)
                    {
                        <span>‚úÖ Same instance (within this request)</span>
                    }
                    else
                    {
                        <span>‚ùå Different instances</span>
                    }
                </div>
            </div>
        </div>

        <!-- Singleton -->
        <div class="lifetime-card singleton">
            <div class="card-header">
                <span class="lifetime-icon">üåê</span>
                <h3>Singleton</h3>
                <span class="lifetime-badge">One for all</span>
            </div>
            <div class="card-content">
                <p class="lifetime-desc">One instance for the <strong>entire application lifetime</strong>. Never changes.</p>
                <div class="instance-row">
                    <div class="instance">
                        <span class="instance-label">Injection 1:</span>
                        <code class="guid">@Singleton1.InstanceId.ToString()[..8]...</code>
                    </div>
                    <div class="instance">
                        <span class="instance-label">Injection 2:</span>
                        <code class="guid">@Singleton2.InstanceId.ToString()[..8]...</code>
                    </div>
                </div>
                <div class="comparison @(Singleton1.InstanceId == Singleton2.InstanceId ? "same" : "different")">
                    @if (Singleton1.InstanceId == Singleton2.InstanceId)
                    {
                        <span>‚úÖ Same instance (always!)</span>
                    }
                    else
                    {
                        <span>‚ùå Different instances</span>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="info-panel">
        <h3>üìñ Key Takeaways</h3>
        <table class="summary-table">
            <thead>
                <tr>
                    <th>Lifetime</th>
                    <th>Created When</th>
                    <th>Use Case</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span class="badge transient">Transient</span></td>
                    <td>Every injection</td>
                    <td>Lightweight, stateless services</td>
                </tr>
                <tr>
                    <td><span class="badge scoped">Scoped</span></td>
                    <td>Once per request</td>
                    <td>DbContext, per-request state</td>
                </tr>
                <tr>
                    <td><span class="badge singleton">Singleton</span></td>
                    <td>Once per app</td>
                    <td>Caches, configuration, logging</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private void RefreshPage()
    {
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}

