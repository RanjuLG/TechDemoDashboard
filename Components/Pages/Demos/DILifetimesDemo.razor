                            <div class="collapse" id="diCode2">
                                <div class="bg-dark rounded p-3 mt-2">
                                    <pre class="mb-0"><code class="text-white-50 small">// Service definition
public class TransientService
{
    public Guid InstanceId { get; }
    
    public TransientService()
    {
        // New GUID every time = new instance
        InstanceId = Guid.NewGuid();
    }
}

// Component usage
@inject TransientService Transient1
@inject TransientService Transient2

// Result:
// Transient1.InstanceId = 123e4567-e89b-12d3-a456...
// Transient2.InstanceId = 987f6543-e21c-34d5-b678...
// ‚ùå Different! Each injection gets a NEW instance

// Use case: Lightweight, stateless operations</code></pre>
                                </div>
                            </div>
                        </div>
                    </div>

