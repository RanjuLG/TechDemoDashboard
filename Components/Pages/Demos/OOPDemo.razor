@page "/demos/oop"
@using TechDemoDashboard.Models
@using TechDemoDashboard.Services
@rendermode InteractiveServer

<PageTitle>OOP Demo - Battle Arena</PageTitle>

<div class="demo-page">
    <h1>‚öîÔ∏è OOP Battle Arena</h1>
    <p class="description">
        The Four Pillars of Object-Oriented Programming demonstrated through an RPG battle simulation.
        Each concept is visualized with interactive hero characters.
    </p>

    <div class="pillars-overview">
        <div class="pillar">
            <span class="pillar-icon">üì¶</span>
            <span class="pillar-name">Encapsulation</span>
            <span class="pillar-desc">Health validation</span>
        </div>
        <div class="pillar">
            <span class="pillar-icon">üß¨</span>
            <span class="pillar-name">Inheritance</span>
            <span class="pillar-desc">Hero ‚Üí Warrior/Mage</span>
        </div>
        <div class="pillar">
            <span class="pillar-icon">üé≠</span>
            <span class="pillar-name">Polymorphism</span>
            <span class="pillar-desc">Attack() differs</span>
        </div>
        <div class="pillar">
            <span class="pillar-icon">üìê</span>
            <span class="pillar-name">Abstraction</span>
            <span class="pillar-desc">Abstract Hero class</span>
        </div>
    </div>

    @if (_selectedHero == null)
    {
        <div class="hero-selection">
            <h2>üéÆ Choose Your Hero</h2>
            <p class="selection-desc">Each hero demonstrates <strong>Inheritance</strong> - they all inherit from the abstract <code>Hero</code> base class.</p>
            
            <div class="hero-cards">
                <div class="hero-card warrior" @onclick="SelectWarrior">
                    <div class="hero-icon">‚öîÔ∏è</div>
                    <h3>Warrior</h3>
                    <p class="hero-stats">120 HP ‚Ä¢ 15% Damage Reduction</p>
                    <p class="hero-ability">Heavy melee attacks with critical hit chance</p>
                </div>
                
                <div class="hero-card mage" @onclick="SelectMage">
                    <div class="hero-icon">üîÆ</div>
                    <h3>Mage</h3>
                    <p class="hero-stats">80 HP ‚Ä¢ 100 Mana</p>
                    <p class="hero-ability">Powerful spells with chance for Fireball</p>
                </div>
                
                <div class="hero-card rogue" @onclick="SelectRogue">
                    <div class="hero-icon">üó°Ô∏è</div>
                    <h3>Rogue</h3>
                    <p class="hero-stats">90 HP ‚Ä¢ 25% Dodge</p>
                    <p class="hero-ability">Stealth backstabs for triple damage</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="battle-arena">
            <div class="hero-panel">
                <div class="hero-header">
                    <span class="hero-class-icon">@_selectedHero.Icon</span>
                    <div class="hero-info">
                        <h2>@_selectedHero.Name</h2>
                        <span class="hero-class">@_selectedHero.Class</span>
                    </div>
                    <button class="btn-change" @onclick="ChangeHero">Change Hero</button>
                </div>

                <div class="health-bar-container">
                    <div class="health-bar-label">
                        <span>HP: @_selectedHero.Health / @_selectedHero.MaxHealth</span>
                        <span class="health-status @(_selectedHero.IsAlive ? "alive" : "dead")">
                            @(_selectedHero.IsAlive ? "Alive" : "Defeated!")
                        </span>
                    </div>
                    <div class="health-bar">
                        <div class="health-fill" style="width: @(_selectedHero.HealthPercentage)%"></div>
                    </div>
                </div>

                @if (_selectedHero is Mage mage)
                {
                    <div class="mana-bar-container">
                        <div class="mana-bar-label">
                            <span>Mana: @mage.Mana / @mage.MaxMana</span>
                        </div>
                        <div class="mana-bar">
                            <div class="mana-fill" style="width: @((double)mage.Mana / mage.MaxMana * 100)%"></div>
                        </div>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(_lastAction))
            {
                <div class="action-result">
                    <div class="action-sound">@_lastSound</div>
                    <div class="action-message">@_lastAction</div>
                    @if (_lastDamage > 0)
                    {
                        <div class="action-damage">@_lastDamage damage!</div>
                    }
                </div>
            }

            <div class="demo-sections">
                <!-- POLYMORPHISM Demo -->
                <div class="demo-section polymorphism">
                    <h3>üé≠ Polymorphism: Attack()</h3>
                    <p>Same method call, different behavior based on hero type!</p>
                    <button class="btn btn-attack" @onclick="PerformAttack" disabled="@(!_selectedHero.IsAlive)">
                        Attack! ‚öîÔ∏è
                    </button>
                    <div class="code-hint">
                        <code>hero.Attack()</code> ‚Üí @_selectedHero.Class has unique implementation
                    </div>
                </div>

                <!-- ENCAPSULATION Demo -->
                <div class="demo-section encapsulation">
                    <h3>üì¶ Encapsulation: Health Validation</h3>
                    <p>The Health property prevents invalid values.</p>
                    <div class="encapsulation-buttons">
                        <button class="btn btn-damage" @onclick="() => DealDamage(20)">
                            Take 20 Damage
                        </button>
                        <button class="btn btn-heal" @onclick="() => HealHero(30)">
                            Heal 30 HP
                        </button>
                        <button class="btn btn-invalid" @onclick="TryInvalidHealth">
                            Try Set HP = -100
                        </button>
                        <button class="btn btn-reset" @onclick="ResetHero">
                            Reset Hero
                        </button>
                    </div>
                    @if (!string.IsNullOrEmpty(_encapsulationResult))
                    {
                        <div class="validation-result">
                            üì¶ @_encapsulationResult
                        </div>
                    }
                </div>
            </div>

            <!-- Battle Log -->
            <div class="battle-log">
                <div class="log-header">
                    <h3>üìú Battle Log</h3>
                    <span class="log-count">@_selectedHero.BattleLog.Count entries</span>
                </div>
                <div class="log-content">
                    @if (_selectedHero.BattleLog.Count == 0)
                    {
                        <p class="log-empty">No actions yet. Start battling!</p>
                    }
                    else
                    {
                        @foreach (var entry in _selectedHero.BattleLog.AsEnumerable().Reverse().Take(10))
                        {
                            <div class="log-entry">@entry</div>
                        }
                    }
                </div>
            </div>
        </div>
    }

    <div class="info-panel">
        <h3>üìñ The Four Pillars in Code</h3>
        <div class="code-examples">
            <div class="code-example">
                <h4>üìê Abstraction</h4>
                <pre><code>public abstract class Hero
{
    public abstract Attack();
    // Cannot instantiate Hero directly
}</code></pre>
            </div>
            <div class="code-example">
                <h4>üß¨ Inheritance</h4>
                <pre><code>public class Warrior : Hero
{
    // Inherits Name, Health, etc.
    // Adds Strength property
}</code></pre>
            </div>
            <div class="code-example">
                <h4>üì¶ Encapsulation</h4>
                <pre><code>private int _health;
public int Health
{
    set => _health = Math.Max(0, value);
}</code></pre>
            </div>
            <div class="code-example">
                <h4>üé≠ Polymorphism</h4>
                <pre><code>// Same call, different behavior
warrior.Attack(); // Sword slash
mage.Attack();    // Fireball</code></pre>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    private OOPDemoService Service { get; set; } = default!;

    // Convenience properties for cleaner markup
    private Hero? _selectedHero => Service.SelectedHero;
    private string _lastAction => Service.LastAction;
    private string _lastSound => Service.LastSound;
    private int _lastDamage => Service.LastDamage;
    private string _encapsulationResult => Service.EncapsulationResult;

    // Delegate all methods to the service
    private void SelectHero(Hero hero) => Service.SelectHero(hero);
    private void SelectWarrior() => Service.SelectWarrior();
    private void SelectMage() => Service.SelectMage();
    private void SelectRogue() => Service.SelectRogue();
    private void ChangeHero() => Service.ChangeHero();
    private void PerformAttack() => Service.PerformAttack();
    private void DealDamage(int amount) => Service.DealDamage(amount);
    private void HealHero(int amount) => Service.HealHero(amount);
    private void TryInvalidHealth() => Service.TryInvalidHealth();
    private void ResetHero() => Service.ResetHero();
}

