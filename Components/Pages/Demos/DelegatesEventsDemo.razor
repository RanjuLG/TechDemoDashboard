@page "/demos/delegates-events"
@using TechDemoDashboard.Services
@rendermode InteractiveServer

<PageTitle>Delegates & Events Demo</PageTitle>

<div class="demo-page">
    <h1>üìä Delegates & Events - Stock Market</h1>
    <p class="description">
        Watch how the <strong>Publisher/Subscriber pattern</strong> works with delegates and events.
        The Stock Exchange fires price change events, and traders automatically respond!
    </p>

    <div class="demo-container">
        <!-- Stock Exchange Panel -->
        <div class="exchange-panel">
            <div class="stock-display">
                <div class="symbol">@Service.Exchange.Symbol</div>
                <div class="price">$@Service.Exchange.CurrentPrice.ToString("F2")</div>
                <button class="btn btn-primary btn-lg" @onclick="ChangePrice">
                    üîÑ Change Price
                </button>
            </div>

            <div class="concept-card">
                <h3>üìå The Publisher</h3>
                <p><code>StockExchange</code> has an <strong>event</strong> that fires when price changes.</p>
                <div class="code-snippet">
                    <code>public event PriceChangedHandler? OnPriceChanged;</code>
                </div>
                <p class="note">Only the owner can <code>Invoke()</code> the event!</p>
            </div>
        </div>

        <!-- Subscribers Panel -->
        <div class="subscribers-panel">
            <h2>Active Subscribers</h2>
            <p class="info">Toggle traders on/off to see dynamic subscription (<code>+=</code> and <code>-=</code>)</p>

            <div class="subscriber-cards">
                <div class="subscriber-card @(Service.IsBullSubscribed ? "active" : "inactive")">
                    <div class="subscriber-header">
                        <span class="icon">üêÇ</span>
                        <span class="name">@Service.BullTrader.Name</span>
                        <button class="btn-toggle" @onclick="Service.ToggleBull">
                            @(Service.IsBullSubscribed ? "Unsubscribe" : "Subscribe")
                        </button>
                    </div>
                    <div class="strategy">Buys when price goes UP ‚¨ÜÔ∏è</div>
                    @if (Service.IsBullSubscribed)
                    {
                        <div class="subscribed-badge">‚úÖ Listening</div>
                    }
                </div>

                <div class="subscriber-card @(Service.IsBearSubscribed ? "active" : "inactive")">
                    <div class="subscriber-header">
                        <span class="icon">üêª</span>
                        <span class="name">@Service.BearTrader.Name</span>
                        <button class="btn-toggle" @onclick="Service.ToggleBear">
                            @(Service.IsBearSubscribed ? "Unsubscribe" : "Subscribe")
                        </button>
                    </div>
                    <div class="strategy">Sells when price goes DOWN ‚¨áÔ∏è</div>
                    @if (Service.IsBearSubscribed)
                    {
                        <div class="subscribed-badge">‚úÖ Listening</div>
                    }
                </div>

                <div class="subscriber-card @(Service.IsDayTraderSubscribed ? "active" : "inactive")">
                    <div class="subscriber-header">
                        <span class="icon">üìà</span>
                        <span class="name">@Service.DayTrader.Name</span>
                        <button class="btn-toggle" @onclick="Service.ToggleDayTrader">
                            @(Service.IsDayTraderSubscribed ? "Unsubscribe" : "Subscribe")
                        </button>
                    </div>
                    <div class="strategy">Trades on volatility &gt; 5%</div>
                    @if (Service.IsDayTraderSubscribed)
                    {
                        <div class="subscribed-badge">‚úÖ Listening</div>
                    }
                </div>

                <div class="subscriber-card @(Service.IsNewsSubscribed ? "active" : "inactive")">
                    <div class="subscriber-header">
                        <span class="icon">üì∞</span>
                        <span class="name">@Service.NewsAlert.Source</span>
                        <button class="btn-toggle" @onclick="Service.ToggleNews">
                            @(Service.IsNewsSubscribed ? "Unsubscribe" : "Subscribe")
                        </button>
                    </div>
                    <div class="strategy">Reports all price changes</div>
                    @if (Service.IsNewsSubscribed)
                    {
                        <div class="subscribed-badge">‚úÖ Listening</div>
                    }
                </div>
            </div>
        </div>

        <!-- Activity Log -->
        <div class="activity-panel">
            <div class="panel-header">
                <h2>üìã Activity Log</h2>
                <button class="btn btn-sm" @onclick="Service.ClearLogs">Clear</button>
            </div>
            <div class="activity-log">
                @if (!Service.GlobalActivityLog.Any())
                {
                    <div class="empty-state">Click "Change Price" to see events in action!</div>
                }
                else
                {
                    @foreach (var entry in Service.GlobalActivityLog.TakeLast(20).Reverse())
                    {
                        <div class="log-entry">@entry</div>
                    }
                }
            </div>
        </div>

        <!-- Educational Section -->
        <div class="education-panel">
            <h2>üí° Key Concepts</h2>
            
            <div class="concept-grid">
                <div class="concept-card">
                    <h3>üéØ Delegate</h3>
                    <p>A <strong>type-safe function pointer</strong>. Defines the signature for methods.</p>
                    <div class="code-snippet">
                        <code>public delegate void PriceChangedHandler(object sender, PriceChangedEventArgs e);</code>
                    </div>
                </div>

                <div class="concept-card">
                    <h3>üîî Event</h3>
                    <p>A <strong>protected delegate</strong>. Only the publisher can fire it.</p>
                    <div class="code-snippet">
                        <code>public event PriceChangedHandler? OnPriceChanged;</code>
                    </div>
                </div>

                <div class="concept-card">
                    <h3>‚ûï Subscribe</h3>
                    <p>Attach a method to an event using <code>+=</code></p>
                    <div class="code-snippet">
                        <code>exchange.OnPriceChanged += trader.OnPriceChanged;</code>
                    </div>
                </div>

                <div class="concept-card">
                    <h3>‚ûñ Unsubscribe</h3>
                    <p>Remove a method from an event using <code>-=</code></p>
                    <div class="code-snippet">
                        <code>exchange.OnPriceChanged -= trader.OnPriceChanged;</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    private DelegatesEventsService Service { get; set; } = default!;

    private void ChangePrice()
    {
        Service.ChangePrice();
    }
}

