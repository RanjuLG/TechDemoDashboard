@page "/"
@rendermode InteractiveServer

<PageTitle>Tech Demo Dashboard</PageTitle>

<div class="home-container">
    <header class="hero">
        <div class="hero-content">
            <h1>🚀 Tech Demo Dashboard</h1>
            <p class="tagline">Explore .NET concepts through interactive demonstrations</p>
        </div>
    </header>

    <section class="demos-section">
        <h2>Available Demos</h2>
        
        <div class="demo-cards">
            <a href="demos/concurrency" class="demo-card">
                <div class="card-icon">🧵</div>
                <div class="card-content">
                    <h3>Concurrency & Parallelism</h3>
                    <p>Compare sequential, async, and parallel execution patterns. 
                       Watch real-time progress and thread behavior.</p>
                    <ul class="features">
                        <li>Sequential (Blocking)</li>
                        <li>Async (Sequential)</li>
                        <li>Concurrent (Task.WhenAll)</li>
                        <li>Parallel (Multi-threaded)</li>
                    </ul>
                </div>
                <span class="card-arrow">→</span>
            </a>

            <a href="demos/signalr" class="demo-card">
                <div class="card-icon">📡</div>
                <div class="card-content">
                    <h3>SignalR Real-time</h3>
                    <p>Real-time communication using WebSockets. Open in multiple tabs to see instant message sync.</p>
                    <ul class="features">
                        <li>WebSocket Connection</li>
                        <li>Hub Pattern</li>
                        <li>Broadcast Messaging</li>
                    </ul>
                </div>
                <span class="card-arrow">→</span>
            </a>

            <a href="demos/di-lifetimes" class="demo-card">
                <div class="card-icon">💉</div>
                <div class="card-content">
                    <h3>DI Lifetimes Visualizer</h3>
                    <p>Understand Transient vs Scoped vs Singleton service lifetimes with visual GUID comparisons.</p>
                    <ul class="features">
                        <li>Transient</li>
                        <li>Scoped</li>
                        <li>Singleton</li>
                        <li>Interview Ready</li>
                    </ul>
                </div>
                <span class="card-arrow">→</span>
            </a>

            <a href="demos/race-condition" class="demo-card">
                <div class="card-icon">🔒</div>
                <div class="card-content">
                    <h3>Race Condition & Locking</h3>
                    <p>See how concurrent threads cause overselling, and how locks prevent race conditions.</p>
                    <ul class="features">
                        <li>Thread Safety</li>
                        <li>Lock Pattern</li>
                        <li>Overselling Bug</li>
                        <li>Interview Ready</li>
                    </ul>
                </div>
                <span class="card-arrow">→</span>
            </a>
        </div>
    </section>

    <section class="info-section">
        <div class="info-card">
            <h3>🎯 Debug-Friendly</h3>
            <p>All logic separated into Service classes for easy breakpoint debugging.</p>
        </div>
        <div class="info-card">
            <h3>📊 Visual Feedback</h3>
            <p>Real-time log output shows exactly what's happening under the hood.</p>
        </div>
        <div class="info-card">
            <h3>🧪 Learn by Doing</h3>
            <p>Interactive examples to understand complex .NET patterns.</p>
        </div>
    </section>
</div>

